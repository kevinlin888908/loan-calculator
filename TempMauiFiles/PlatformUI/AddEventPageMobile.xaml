<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="CalendarMauiMobile.AddEventPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="? 新增事件"
             BackgroundColor="#F8F9FA">

    <Shell.TitleView>
        <Grid BackgroundColor="#4CAF50">
            <StackLayout Orientation="Horizontal" 
                        HorizontalOptions="Center" 
                        VerticalOptions="Center"
                        Spacing="10">
                <Label Text="?"
                       FontSize="20"
                       TextColor="White" />
                <Label Text="新增幸運事件"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="White" />
                <Label Text="??"
                       FontSize="20"
                       TextColor="White" />
            </StackLayout>
        </Grid>
    </Shell.TitleView>

    <ScrollView Padding="20">
        <StackLayout Spacing="25">

            <!-- 幸運提示 -->
            <Frame BackgroundColor="#E8F6E8" 
                   BorderColor="#4CAF50"
                   CornerRadius="12"
                   Padding="15"
                   HasShadow="True">
                <StackLayout>
                    <Label Text="?? 創造幸運事件小貼士"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#2E7D32"
                           HorizontalOptions="Center" />
                    <Label Text="? 選擇包含數字 8 的日期時間"
                           FontSize="14"
                           TextColor="#4CAF50"
                           Margin="0,10,0,0" />
                    <Label Text="? 標題加入「發財」、「順利」、「成功」"
                           FontSize="14"
                           TextColor="#4CAF50" />
                    <Label Text="? 8日、18日、28日是超級幸運日！"
                           FontSize="14"
                           TextColor="#4CAF50" />
                </StackLayout>
            </Frame>

            <!-- 事件標題 -->
            <StackLayout>
                <Label Text="?? 事件標題"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="#333333" />
                <Frame BackgroundColor="White" 
                       CornerRadius="8"
                       Padding="0"
                       HasShadow="False"
                       BorderColor="#E0E0E0">
                    <Entry x:Name="TitleEntry"
                           Placeholder="例如：房東簽約發大財 ??"
                           FontSize="16"
                           TextColor="#333333"
                           BackgroundColor="Transparent"
                           TextChanged="OnTitleChanged" />
                </Frame>
            </StackLayout>

            <!-- 事件內容 -->
            <StackLayout>
                <Label Text="?? 事件內容"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="#333333" />
                <Frame BackgroundColor="White" 
                       CornerRadius="8"
                       Padding="0"
                       HasShadow="False"
                       BorderColor="#E0E0E0">
                    <Editor x:Name="DescriptionEditor"
                            Placeholder="例如：房東一月三號下午三點要簽約 - 祝簽約順利發財！"
                            FontSize="16"
                            TextColor="#333333"
                            BackgroundColor="Transparent"
                            HeightRequest="100"
                            TextChanged="OnDescriptionChanged" />
                </Frame>
            </StackLayout>

            <!-- 日期時間選擇 -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                <!-- 日期 -->
                <StackLayout Grid.Column="0">
                    <Label Text="?? 事件日期"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#333333" />
                    <Frame BackgroundColor="White" 
                           CornerRadius="8"
                           Padding="10"
                           HasShadow="False"
                           BorderColor="#E0E0E0">
                        <DatePicker x:Name="EventDatePicker"
                                  Date="{Binding EventDate}"
                                  DateSelected="OnDateTimeChanged"
                                  FontSize="16"
                                  BackgroundColor="Transparent" />
                    </Frame>
                </StackLayout>

                <!-- 時間 -->
                <StackLayout Grid.Column="1">
                    <Label Text="? 事件時間"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#333333" />
                    <Frame BackgroundColor="White" 
                           CornerRadius="8"
                           Padding="10"
                           HasShadow="False"
                           BorderColor="#E0E0E0">
                        <TimePicker x:Name="EventTimePicker"
                                  Time="{Binding EventTime}"
                                  PropertyChanged="OnDateTimeChanged"
                                  FontSize="16"
                                  BackgroundColor="Transparent" />
                    </Frame>
                </StackLayout>
            </Grid>

            <!-- 幸運預測卡片 -->
            <Frame x:Name="LuckyPreviewFrame"
                   BackgroundColor="#FFF8E1"
                   BorderColor="#FFC107"
                   CornerRadius="12"
                   Padding="15"
                   HasShadow="True"
                   IsVisible="{Binding ShowLuckyPreview}">
                <StackLayout>
                    <Label Text="?? 幸運預測"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#F57C00"
                           HorizontalOptions="Center" />
                    <Label x:Name="LuckyScoreLabel"
                           Text="幸運指數：0 分"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#FF9800"
                           HorizontalOptions="Center"
                           Margin="0,5,0,0" />
                    <Label x:Name="LuckyAdvicePreviewLabel"
                           Text="輸入事件資訊查看幸運預測"
                           FontSize="12"
                           TextColor="#FFC107"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                </StackLayout>
            </Frame>

            <!-- 按鈕區域 -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="15" Margin="0,20,0,0">
                <Button Grid.Column="0"
                        x:Name="SaveButton"
                        Text="?? 保存事件"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="25"
                        HeightRequest="50"
                        Clicked="OnSaveClicked" />

                <Button Grid.Column="1"
                        Text="?? 清除重填"
                        BackgroundColor="#FF9800"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="25"
                        HeightRequest="50"
                        Clicked="OnClearClicked" />
            </Grid>

            <!-- 幸運數字提醒 -->
            <Frame BackgroundColor="#F3E5F5"
                   BorderColor="#9C27B0"
                   CornerRadius="12"
                   Padding="15"
                   HasShadow="True">
                <StackLayout>
                    <Label Text="?? 幸運數字推薦"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#7B1FA2"
                           HorizontalOptions="Center" />
                    <Grid ColumnDefinitions="*,*,*,*,*" ColumnSpacing="5" Margin="0,10,0,0">
                        <Label Grid.Column="0" Text="8" FontSize="16" FontAttributes="Bold" 
                               TextColor="#9C27B0" HorizontalOptions="Center" />
                        <Label Grid.Column="1" Text="88" FontSize="16" FontAttributes="Bold" 
                               TextColor="#9C27B0" HorizontalOptions="Center" />
                        <Label Grid.Column="2" Text="168" FontSize="16" FontAttributes="Bold" 
                               TextColor="#9C27B0" HorizontalOptions="Center" />
                        <Label Grid.Column="3" Text="888" FontSize="16" FontAttributes="Bold" 
                               TextColor="#9C27B0" HorizontalOptions="Center" />
                        <Label Grid.Column="4" Text="1688" FontSize="16" FontAttributes="Bold" 
                               TextColor="#9C27B0" HorizontalOptions="Center" />
                    </Grid>
                    <Label Text="選擇包含這些數字的時間，提升幸運指數！"
                           FontSize="12"
                           TextColor="#9C27B0"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           Margin="0,5,0,0" />
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>

</ContentPage>